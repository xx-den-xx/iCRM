<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_event_title"
            android:textSize="18dp"
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="11dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/client_background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_event_time_begin"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/cardview_dark_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_event_time"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/cardview_dark_background"/>

                        <TimePicker
                            android:id="@+id/tp_time_begin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numbersTextColor="@color/cardview_dark_background">

                        </TimePicker>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_event_date"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/cardview_dark_background"/>

                        <DatePicker
                            android:id="@+id/dp_date_begin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:calendarTextColor="@color/cardview_dark_background">

                        </DatePicker>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_event_time_end"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="22sp"
                    android:textColor="@color/cardview_dark_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_event_time"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/cardview_dark_background"/>

                        <TimePicker
                            android:id="@+id/tp_time_end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numbersTextColor="@color/cardview_dark_background">

                        </TimePicker>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_event_date"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/cardview_dark_background"/>

                        <DatePicker
                            android:id="@+id/dp_date_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:calendarTextColor="@color/cardview_dark_background">

                        </DatePicker>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="@string/add_event_message"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:textColorHint="@color/cardview_dark_background"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#ffd9dbdc">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/no"
                    android:id="@+id/btn_left"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_btn_selector"
                    android:textColor="#ff535353"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/divider3"
                    android:background="#ffbcbcbc"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/divider4"
                    android:background="#ffeeeeee"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/ok"
                    android:id="@+id/btn_right"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_btn_selector"
                    android:textColor="#ff535353"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>